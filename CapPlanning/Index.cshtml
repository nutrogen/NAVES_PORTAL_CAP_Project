        <div class="ps-2">
            <h3>Planning Detail</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <ejs-grid id="GridDetail" allowTextWrap="true" enableInfiniteScrolling="true" allowSorting="true"
